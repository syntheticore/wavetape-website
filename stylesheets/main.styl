global-reset()

$baseFont = 'Neue Helvetica', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif

$main = #1aa6d2
$black = #333
$gray1 = $black * 2
$gray2 = $black * 3
$gray3 = $black * 3.7
$gray4 = $black * 4.4
$gray5 = $black * 4.9

$shadow = 0 1px 3px rgba(0,0,0, 0.07)

sticky()
  position: -webkit-sticky
  position: -moz-sticky
  position: -ms-sticky
  position: -o-sticky
  position: sticky
  top: 0

*
  box-sizing: border-box

html
  width: 100%
  height: 100%
  text-size-adjust: 100%

body
  height: 100%
  margin: 0
  font-family: $baseFont
  color: $black
  position: relative

a
  text-decoration: none
  color: $main
  &:hover
    text-decoration: underline
h1
  font-size: 1.2rem

button
a.button
input[type="text"]
input[type="email"]
input[type="password"]
  appearance: none
  outline: none
  border-width: 1px
  border-style: solid
  border-color: $gray3
  border-radius: 3px
  background: white
  padding: 0.5rem
  margin: 0
  transition: background 0.2s, color 0.2s

button, a.button
  cursor: pointer
  text-transform: uppercase
  font-weight: 700
  color: $main
  border: none
  &:hover
    background: $gray5
  &:active
    background: $main
    color: white

@require 'echo-view.styl'

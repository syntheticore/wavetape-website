  .distance
    display: block
    width: 200px
    height: 200px
    margin: 2rem auto
    font-weight: 500
    border-radius: 50%
    position: relative
    text-align: center
    background: white
    border: 1px solid transparent
    transition: all 0.4s
    box-shadow: 0 0px 8px $main
    &:hover
      border: 1px solid $main
      h2
        color: $black
    &:active
      box-shadow: inset 0 0px 8px $main
    &.running
      text-transform: none
      box-shadow: inset 0 0px 8px $main
      h2
        color: $black
      &::before
        content: ''
        display: block
        position: absolute
        width: calc(200%)
        height: calc(200%)
        border-radius: 50%
        top: -50%
        left: -50%
        background: repeating-radial-gradient($main, transparent 1px, $main 40px)
        z-index: -1
        animation: pulse 3s ease-out
        animation-iteration-count: infinite
      &.obstacle::before
        $alarm = red
        background: repeating-radial-gradient($alarm, transparent 1px, $alarm 40px)
    h2
      font-size: 1.5rem
      // margin-top: 1rem
      // margin-bottom: 0.25rem
      font-weight: 600
      color: $gray2
      transition: all 0.4s
    span
      color: $main
      font-weight: 400
      font-size: 2rem

  @keyframes 'pulse'
    0%
      transform: scale(0.5)
      opacity: 0.0
    30%
      opacity: 0.5
    100%
      transform: scale(1)
      opacity: 0.0

  .charts
    padding: 0 .5rem
    display: block
    // z-index: -2
    // position: relative
    &.running
      li
        opacity: 1
        height: 52px
    li
      opacity: 0
      height: 0px
      transition: all 1s
      background: alpha(#f9f9f9, 0.8)
      border-radius: 800px
      border: 1px solid lightgray
      margin-bottom: 0.5rem
      width: 100%
      overflow: hidden
      position: relative
      // box-shadow: inset 0 1px 8px alpha($main, 0.5)
      header
        padding: 0.5rem
        background: linear-gradient(to bottom, #fff, #fafafa)
        border-bottom: 1px solid #e0e0e0
        box-shadow: $shadow
        position: relative
      h3
        font-size: 0.9rem
        display: inline-block
      input
        float: right
  
  #instructions
    margin-top: 2rem
    line-height: 2
